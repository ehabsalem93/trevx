<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="80dp"

    android:orientation="horizontal" >



    <TextView
        android:id="@+id/song_name"
        android:layout_gravity="center"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"

        android:text="Song Title"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/heart_unfilled" />

    <ImageButton
        android:id="@+id/download"
        android:layout_gravity="center"
        android:layout_width="35dp"
        android:layout_height="35dp"
            android:background="@drawable/download"
        android:layout_marginTop="20dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/heart_unfilled"
        android:layout_gravity="center"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:visibility="visible"
        android:layout_marginRight="10dp"
        android:background="@drawable/favorite_unfilled"
        android:layout_alignTop="@+id/download"
        android:layout_toLeftOf="@+id/download" />

    <ImageButton
        android:id="@+id/heart_filled"
        android:layout_gravity="center"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:visibility="visible"
        android:layout_marginRight="10dp"
        android:background="@drawable/favorite_filled"
        android:layout_alignTop="@+id/download"
        android:layout_toLeftOf="@+id/download" />


</RelativeLayout>