<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="4dp"
        >

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:padding="2dp"

            >

            <ImageView
                android:id="@+id/person_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"

                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/brand"

                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/person_photo"
                android:text="Loading"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/person_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/person_name"
                android:layout_toEndOf="@+id/person_photo"
                android:textColor="@color/subtext"
                android:textSize="13dp"
                />

            <ImageView
                android:id="@+id/download"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/download"
                />

            <ImageButton
                android:id="@+id/heart_unfilled"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignTop="@+id/download"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/download"
                android:background="@drawable/favorite_unfilled"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/heart_filled"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignTop="@+id/download"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/download"
                android:background="@drawable/favorite_filled"
                android:visibility="gone" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
