<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"


    android:layout_height="match_parent"
    android:alpha="0.9"
    tools:context="trevx.Search.Search_Fragment">



    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="565dp"
        android:layout_alignParentBottom="true"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scrollbars="vertical" />

    <me.originqiu.library.EditTag
        android:id="@+id/edit_tag_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:delete_mode_bg="@color/red"
        app:input_layout="@layout/view_sample_input_tag"
        app:tag_layout="@layout/view_sample_tag" />

    <eu.fiskur.chipcloud.ChipCloud xmlns:chipcloud="http://schemas.android.com/apk/res-auto"
        android:id="@+id/chip_cloud"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        chipcloud:deselectTransitionMS="500"
        chipcloud:deselectedColor="@color/colorPrimary"
        chipcloud:deselectedFontColor="@color/White"
        chipcloud:selectMode="required"

        chipcloud:selectTransitionMS="750"

        chipcloud:selectedColor="@color/colorAccent"
        chipcloud:selectedFontColor="@color/White" />


</RelativeLayout>
